@model List<Pokemon>

@if (Model.Count == 0)
{
    <p>You don't currently have any Pokemon added to your favorites.</p>
}
else
{
    <h2>Viewing your favorite Pokemon:</h2>
    @foreach (Pokemon p in Model)
    {
        <h3>Name: @p.Name</h3>
        <h3>URL: @p.Url</h3>
        <h3>UserId: @p.UserId</h3>
        <a asp-action="Delete" asp-controller="Favorites" asp-route-id="@p.Id"><button>Remove Favorite</button></a>
    }
}